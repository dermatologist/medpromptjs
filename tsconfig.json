{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["src", "types"],
  "compilerOptions": {
        "target": "ES2022", // or higher
        "module": "nodenext", //nodenext
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "emitDecoratorMetadata": true
  }
}
